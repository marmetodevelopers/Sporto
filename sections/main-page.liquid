<section data-component="main-page" data-component-type="section" {% if tag != blank %}data-component-tag="{{ tag }}" {% endif %}class="main-page">
  <section-wrapper {% if section.settings.width == 'content' %}width="content"{% endif %}>
    <section-header>
      {% if page.title != 'Contact Us' %}
        <h1 align="center">
          {{ page.title | escape }}
        </h1>
      {% endif %} 
    </section-header>
  </section-wrapper>
  <section-wrapper {% if section.settings.width == 'content' %}width="content"{% endif %}>
    <section-content>
      {{ page.content }}
    </section-content>
  </section-wrapper>
</section>
{% schema %}
{
  "name": "t:common.component.page",
  "settings": [
    {
      "type": "select",
      "id": "width",
      "label": "t:component.page.width.label",
      "options": [
        {
          "value": "content",
          "label": "t:common.layout.centered"
        },
        {
          "value": "site_width",
          "label": "t:component.page.width.option_2"
        }
      ]
    }
  ]
}
{% endschema %}