<article data-component="main-article" data-component-type="section" {% if tag != blank %}data-component-tag="{{ tag }}" {% endif %}class="main-article" itemscope itemtype="http://schema.org/BlogPosting">
  <section-wrapper
    class="
      main-article__header-wrapper
      main-article__header-wrapper--{{ section.settings.title_style }}
    "
    {% if section.settings.title_style == 'wide' %}
      width="wide"
    {% endif %}
  >
    <section-header>
      <header class="main-article__header">
        <h1
          class="
            main-article__title
            {% if section.settings.title_style == 'overlap' %}
              main-article__title--overlap
            {% endif %}
          "
          itemprop="headline"
        >
          {{ article.title | escape }}
        </h1>
      </header>
    </section-header>
  </section-wrapper>
  {% if section.settings.show_article_image and article.image %}
    <section-wrapper
      class="
        main-article__image-wrapper
        main-article__image-wrapper--{{ section.settings.image_display }}
      "
      {% if section.settings.image_display == 'wide' %}
        width="{{ section.settings.image_display }}"
      {% endif %}
    >
      <section-content>
        <div
          class="
            main-article__featured-image
            {% if section.settings.title_style == 'overlap' %}
              main-article__featured-image--title-overlap
            {% endif %}

          "
          itemprop="image"
        >
          {% comment %}Component lazy-img:default begin{% endcomment %}
          {% render 'lazy-img', img: article.image, size: '1024x', lazy: true, canvas: true %}
          {% comment %}Component lazy-img:default end{% endcomment %}
        </div>
      </section-content>
    </section-wrapper>
  {% endif %}
