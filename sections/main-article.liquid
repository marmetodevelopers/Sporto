    <section-content>
      <div class="main-article__wrapper">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'content' %}
              {% if block.settings.show_date or block.settings.show_author %}
                <div class="main-article__meta">
                  {% if block.settings.show_author %}
                    <span class="main-article__author" itemprop="author" itemscope itemtype="http://schema.org/Person">
                      <span itemprop="name">{{ 'blogs.article.written_by' | t: author: article.author }}</span>
                    </span>
                  {% endif %}
                  {% if block.settings.show_date %}
                    <span class="main-article__date" itemprop="dateCreated pubdate datePublished">{{ article.published_at | time_tag: format: 'date' }}</span>
                  {% endif %}
                </div>
              {% endif %}
              <div class="main-article__content" itemprop="articleBody">
                {{ article.content }}
              </div>
            {% when 'share' %}
              <div class="main-article__footer">
                <div class="main-article__footer-top">
                  {% if article.tags.size > 0 %}
                    <ul class="main-article__tags">
                      {% for tag in article.tags %}
                        <li class="main-article__tag">
                          {{ tag | escape | link_to_tag: tag }}
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
