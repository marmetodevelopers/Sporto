  {%- comment -%}
    @param blog [Required]
      The blog object that is being viewed
  
    @param comments_per_page [Optional]
      The number of comments to show per page. Defaults to 5
  {%- endcomment -%}
  
  {% assign comments_per_page = comments_per_page | default: 5 %}
  
  {% if blog.comments_enabled? %}
    <section class="comments" id="comments">
      <section-wrapper width="content">
        <section-content>
          <div class="comments__wrapper">
            {% if article.comments_count > 0 %}
              <div class="comments__header">
                <h2 class="comments__count">{{ 'blogs.comments.comment_count' | t: count: article.comments_count }}</h2>
                {% assign button_text = 'blogs.comments.comment_form_title' | t %}
                {% assign href = '#comment_form' %}
                {% comment %}Component button-link:default begin{% endcomment %}
                {% liquid
                  assign style_7428a640 = style
                  assign style = 'secondary'
                  assign size_7428a640 = size
                  assign size = 'small'
                  assign text_7428a640 = text
                  assign text = button_text
                %}
                {% comment %}
                  @param href [Required]
                    This is the anchor tag for the link button.
                
                  @param style [Required]
                    This is the style of the button: primary, secondary, tertiary, or text.
                
                  @param size [Required]
                    This defines the size of the button: small, medium, or large.
                
                  @param text [Required]
                    This is the text to be included in the button.
                
                  @param attributes [Optional]
                    Any additional attributes to add to the button-link tag.
                {% endcomment %}
                
                <a
                  data-component="button-link"
                  data-component-type="component"
                  {% if tag != blank %}data-component-tag="{{ tag }}"
                  {% endif %}class="button-link button-link--{{ style }} button-link--{{ size }}{% if style == 'primary' or style == 'secondary' %} button-link--shadow{% endif %%}"
                  {% if href != blank %}
                    href="{{ href }}"
                  {% endif %}
                  {{ attributes }}
                >
                  {{ text }}
                </a>
                
                {% liquid
                  assign style = style_7428a640
                  assign style_7428a640 = nil
                  assign size = size_7428a640
                  assign size_7428a640 = nil
                  assign text = text_7428a640
                  assign text_7428a640 = nil
                %}
                {% comment %}Component button-link:default end{% endcomment %}
              </div>
  
              {% paginate article.comments by comments_per_page %}
                <div class="comments__list">
                  {% if comment.status == 'pending' and comment.content %}
                    <article class="comment" id="{{ comment.id }}">
                      <div class="comment__meta">
                        <span class="comment__author">{{ comment.author }}</span><span class="comment__date">{{ comment.created_at | time_tag: format: 'date' }}</span>
                      </div>
                      <div class="comment__body">
                        {{ comment.content }}
                      </div>
                    </article>
                  {% endif %}
                  {% for comment in article.comments %}
                    <article class="comment" id="{{ comment.id }}">
                      <div class="comment__meta">
                        <span class="comment__author">{{ comment.author }}</span><span class="comment__date">{{ comment.created_at | time_tag: format: 'date' }}</span>
                      </div>
                      <div class="comment__body">
                        {{ comment.content }}
                      </div>
                    </article>
                  {% endfor %}
                </div>
                {% comment %}Component pagination:default begin{% endcomment %}
                {% render 'pagination', paginate: paginate %}
                {% comment %}Component pagination:default end{% endcomment %}
              {% endpaginate %}
            {% endif %}
            {% form 'new_comment', article %}
              {% liquid
                assign post_message = 'blogs.comments.success'
                if blog.moderated? and comment.status == 'unapproved'
                  assign post_message = 'blogs.comments.success_moderated'
                endif
  
                assign name_label = 'blogs.comments.name' | t
                assign email_label = 'blogs.comments.email' | t
                assign comment_label = 'blogs.comments.message' | t
                assign button_label = 'blogs.comments.post' | t
  
                assign name_placeholder = 'blogs.comments.name_placeholder' | t
                assign email_placeholder = 'blogs.comments.email_placeholder' | t
                assign comment_placeholder = 'blogs.comments.comment_placeholder' | t
              %}
  
            {%- capture name_label_text -%}
              {{ name_label }} <span aria-hidden="true">*</span>
            {%- endcapture -%}
  
            {%- capture email_label_text -%}
              {{ email_label }} <span aria-hidden="true">*</span>
            {%- endcapture -%}
  
            {%- capture comment_label_text -%}
              {{ comment_label }} <span aria-hidden="true">*</span>
            {%- endcapture -%}
  
            {% capture name_attributes %}
              aria-required="true"
              required
            {% endcapture %}
            {% capture email_attributes %}
              aria-required="true"
              required
            {% endcapture %}
            {% capture comment_attributes %}
              aria-required="true"
              required
            {% endcapture %}
  
              <h2 class="comment-form__heading">{{ 'blogs.comments.comment_form_title' | t }}</h2>
              {% if form.errors %}
                {% capture form_errors_content %}
                  <h3>{{ 'blogs.comments.error_heading' | t }}</h3>
                  <ul>
                    {% for field in form.errors %}
                      <li>
                        <a href="#comment-{{ field }}">
                          {%- if form.errors.translated_fields[field] contains 'author' -%}
                            {{ 'blogs.comments.name' | t }}
                          {%- elsif form.errors.translated_fields[field] contains 'body'-%}
                            {{ 'blogs.comments.message' | t }}
                          {%- elsif form.errors.translated_fields[field] contains 'email'-%}
                            {{ 'blogs.comments.email' | t }}
                          {%- else -%}
                            {{ form.errors.translated_fields[field] | capitalize }}
                          {%- endif -%}
                          {{ form.errors.messages[field] }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endcapture %}
                {% comment %}Component notification:default begin{% endcomment %}
                {% liquid
                  assign content_57f88ff9 = content
                  assign content = form_errors_content
                  assign type_57f88ff9 = type
                  assign type = 'error'
                %}
                {%- comment -%}
                  @param content [Required]
                    The content that goes in the notification banner
                
                  @param type [Required]
                    The type of notification banner ('error' or 'success')
                
                  @param hidden [Optional]
                    Whether the notification should be hidden
                {%- endcomment -%}
                
                <div
                  data-component="notification"
                  data-component-type="component"
                  {% if tag != blank %}data-component-tag="{{ tag }}"
                  {% endif %}class="
                    notification
                    notification--{{ type }}
                  "
                  {% if type == 'error' %}
